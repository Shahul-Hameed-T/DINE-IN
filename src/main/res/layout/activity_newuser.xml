<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Newuser"
    android:gravity="center">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/buttonss">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="50dp">

            <View
                android:layout_width="0dp"
                android:layout_height="10dp"/>


            <ImageView
                android:id="@+id/pic"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/useriicon"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="10dp"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Owner Dashboard"
                android:textSize="30dp"
                android:gravity="center"
                android:textStyle="bold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000"/>

            <View
                android:layout_width="0dp"
                android:layout_height="30dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                >

                <TextView
                    android:id="@+id/onwerna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="normal" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="8dp"/>

                <TextView
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Age: "
                    android:textSize="20dp"
                    android:textStyle="normal"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="8dp"/>
                <TextView
                    android:id="@+id/dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="DOB: "
                    android:textSize="20dp"
                    android:textStyle="normal"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="8dp"/>

                <TextView
                    android:id="@+id/dlnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Licence No: "
                    android:textSize="20dp"
                    android:textStyle="normal"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="8dp"/>

                <TextView
                    android:id="@+id/dlexp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Licence Expiry Date: "
                    android:textSize="20dp"
                    android:textStyle="normal"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="8dp"/>

                <TextView
                    android:id="@+id/regnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Registration Number: "
                    android:textSize="20dp"
                    android:textStyle="normal"/>


                <View
                    android:layout_width="0dp"
                    android:layout_height="8dp"/>

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Address: "
                    android:textSize="20dp"
                    android:textStyle="normal"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="8dp"/>

                <TextView
                    android:id="@+id/mobiles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Mobile: "
                    android:textSize="20dp"
                    android:textStyle="normal"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="8dp"/>

            </LinearLayout>
        </LinearLayout>

            <Button
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btback"
                android:fontFamily="sans-serif"
                android:padding="5dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="80dp"
                android:layout_centerHorizontal="true"
                android:text="Beneficiary"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="20dp" />


    </RelativeLayout>


</LinearLayout>